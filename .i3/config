#
# Map the special keys we care about
#
# Available keymap can be checked with:
# $ xmodmap -pke

# Pulse Audio controls
bindsym XF86AudioLowerVolume exec --no-startup-id bash -c 'pactl set-sink-volume $(pactl get-default-sink) -2%'
bindsym XF86AudioRaiseVolume exec --no-startup-id bash -c 'pactl set-sink-volume $(pactl get-default-sink) +2%'
bindsym XF86AudioMute exec --no-startup-id bash -c 'pactl set-sink-mute $(pactl get-default-sink) toggle' # mute sound

# Media player controls
# playerctl (install https://github.com/acrisci/playerctl/releases)
bindsym XF86AudioPlay exec playerctl --player=playerctld play-pause
bindsym XF86AudioPause exec playerctl --player=playerctld pause
bindsym XF86AudioNext exec playerctl --player=playerctld next
bindsym XF86AudioPrev exec playerctl --player=playerctld previous

# Sreen brightness controls (https://github.com/Hummer12007/brightnessctl)
bindsym XF86MonBrightnessUp exec brightnessctl -d intel_backlight s +5%
bindsym XF86MonBrightnessDown exec brightnessctl -d intel_backlight s 5%-
