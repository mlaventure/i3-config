[module/spotify]
type = custom/script
interval = 3
format = "%{T1}<label>"
format-padding = 10
; https://github.com/dietervanhoof/polybar-spotify
exec = python3 ~/.config/polybar/polybar-spotify/scripts/spotify/spotify_status.py
format-underline = #1db954
line-size = 1

[module/playpause]
type = custom/script
interval = 2
format = "%{T3}<label>"
; https://github.com/dietervanhoof/polybar-spotify
exec = ~/.config/polybar/polybar-spotify/scripts/spotify/isplaying.sh
format-underline = #1db954
line-size = 1
click-left = playerctl play-pause

[module/previous]
type = custom/script
interval = 86400
format = "%{T3}<label>"
exec = echo "        "
format-underline = #1db954
line-size = 1
click-left = playerctl previous

[module/next]
type = custom/script
interval = 86400
format = "%{T3}<label>"
exec = echo "        "
format-underline = #1db954
line-size = 1
